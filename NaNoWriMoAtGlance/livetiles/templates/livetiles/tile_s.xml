<tile>
  {% load humanize %}
  <visual lang="en-US" version="2">
    <binding template="TileSquare150x150Text02">
      <text id="1">NaNoWriMo</text>
      <text id="2">{{ region_wordcount|intcomma }}</text>
    </binding>
    <binding template="TileWide310x150Text09">
      <text id="1">NaNoWriMo</text>
      <text id="2">{{ region_wordcount|intcomma }} words</text>
    </binding>
    <binding template="TileSquare310x310Text09">
      <text id="1">NaNoWriMo</text>
      <text id="2">{{ region_wordcount|intcomma }} words</text>
    </binding>
  </visual>
  <visual>
    <binding template="TileSmall" hint-textStacking="center">
      <text hint-align="center">{{ region_wordcount|intcomma }}</text>
      <text hint-style="captionsubtle" hint-align="center">NaNoWriMo</text>
    </binding>

    <binding template="TileMedium" hint-textStacking="center">
      <text hint-style="baseSubtle" hint-align="center">NaNoWriMo</text>
      <text hint-style="subtitle" hint-align="center">{{ region_wordcount|intcomma }} words</text>
    </binding>

    <binding template="TileWide" hint-textStacking="center">
      <text hint-style="titleSubtle" hint-align="center">NaNoWriMo</text>
      <text hint-style="subtitle" hint-align="center">{{ region_wordcount|intcomma }} words</text>
    </binding>

    <binding template="TileLarge" hint-textStacking="center">
      <text hint-style="titleSubtle" hint-align="center">NaNoWriMo</text>
      <text hint-style="subtitle" hint-align="center">{{ region_wordcount|intcomma }} words</text>
    </binding>
  </visual>
</tile>